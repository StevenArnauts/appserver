<?xml version="1.0" encoding="utf-8" ?>
<log4net>

	<appender name="ConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
		<mapping>
			<level value="ERROR" />
			<foreColor value="Red" />
		</mapping>
		<mapping>
			<level value="WARN" />
			<foreColor value="Yellow" />
		</mapping>
		<mapping>
			<level value="INFO" />
			<foreColor value="White" />
		</mapping>
		<mapping>
			<level value="DEBUG" />
		</mapping>
		<layout type="Utilities.TextLayout, Utilities" />
	</appender>

	<appender name="FileAppender" type="log4net.Appender.FileAppender">
		<file value="server.txt" />
		<appendToFile value="true" />
		<layout type="Utilities.TextLayout, Utilities" />
	</appender>

	<!--<appender name="RemotingAppender" type="log4net.Appender.RemotingAppender" >
		--><!--The remoting URL to the remoting server object--><!--
		<sink value="tcp://localhost:7070/LoggingSink" />
		--><!--Send all events, do not discard events when the buffer is full--><!--
		<lossy value="false" />
		--><!--The number of events to buffer before sending--><!--
		<bufferSize value="1" />
	</appender>-->

	<root>
		<level value="INFO" />
		<!--<appender-ref ref="RemotingAppender" />-->
		<appender-ref ref="ConsoleAppender" />
		<appender-ref ref="FileAppender" />
	</root>

	<!--<logger name="Utilities">
		<level value="DEBUG" />
	</logger>-->

</log4net>
